QPushButton {
    font-size: 18px;
    min-height: 30px;
    max-height: 70px;

    max-width: 500px;

    color: white;
    background-color: #3498db; /* 按钮背景色 */
    border: 2px solid #2980b9; /* 边框 */
    border-radius: 10px;       /* 圆角 */
    padding: 5px;
}

QPushButton:hover {
    background-color: #2980b9; /* 鼠标悬停时背景色 */
}

QPushButton:pressed {
    background-color: #1abc9c; /* 按下时背景色 */
}
